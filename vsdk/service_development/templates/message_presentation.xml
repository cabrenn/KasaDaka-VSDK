{% extends "base.xml" %}
{#
plays back a message, then sends the user to the redirect
#}

{% block content %}
<form>
<block>
<prompt>
<audio src="{{ message_voice_fragment_url }}"/>
</prompt>
{% if execute_script %}
<submit next="/vxml/{{execute_script}}/{{session_id}}"/>
{% endif%}
{% if redirect_url %}
<goto next="{{ redirect_url }}"/>
{% endif %}
</block>
</form>

{% endblock %}

